options {
        directory "/var/bind";


        // Configure the IPs to listen on here.
        listen-on { any; };
        listen-on-v6 { none; };

        allow-transfer {
                none;
        };

        // Because we may override existing DNS stuff, disable DNSSEC globally
        dnssec-enable no;
        dnssec-validation no;

        pid-file "/var/run/named/named.pid";

        allow-recursion { any; };
        recursion yes;

        include "/etc/bind/conf/forwarders.conf";

};


